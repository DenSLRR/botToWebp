{
  "compilerOptions": {
    "outDir": "./dist",  // Папка для собранных файлов
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],  // Все TypeScript файлы из папки src
  "exclude": ["node_modules"]
}
